{
    "manifest_version": 3,
    "name": "SelahVie",
    "description": "Chrome Extension for The Holy Bible",
    "version": "1.0",
    "action": {
        "default_icon": "SelahVie-logo.png"
    },
    "permissions": [
        "sidePanel",
        "tabs",
        "storage",
        "alarms",
        "scripting",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "index.html",
                "injectSidebar.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}