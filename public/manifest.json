{
    "manifest_version": 3,
    "name": "SelahVie",
    "description": "Chrome Extension for The Holy Bible",
    "version": "1.0",
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "sidePanel",
        "tabs"
    ],
    "side_panel": {
        "default_path": "index.html"
    }
}