{
    "manifest_version": 3,
    "name": "SelahVie",
    "description": "Chrome Extension for The Holy Bible",
    "version": "1.0",
    "action": {
        "default_popup": "index.html",
        "default_icon": "SelahVie-logo.png"
    },
    "permissions": [
        "sidePanel",
        "tabs",
        "storage",
        "alarms"
    ],
    "side_panel": {
        "default_path": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}